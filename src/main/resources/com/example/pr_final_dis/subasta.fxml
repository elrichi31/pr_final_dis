<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pr_final_dis.SubastaController">
    <GridPane AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Articulo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="lblArticulo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Descripcion:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="lblDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Valor:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="lblValor" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Oferta:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="txtOferta" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button text="Ofertar" onAction="#realizarOferta" fx:id="btnOfertar" GridPane.columnIndex="2" GridPane.rowIndex="4" disable="true" />
        <Button text="Terminar" onAction="#terminarSubasta" fx:id="btnTerminar" GridPane.columnIndex="3" GridPane.rowIndex="4" disable="true"/>
    </GridPane>
    <ListView fx:id="listaOfertas" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" />
</AnchorPane>
